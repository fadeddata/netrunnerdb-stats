# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /popular-sets                    controllers.Application.popularSets
GET     /popular-cards                   controllers.Application.popularCards
GET     /deck-distance/:deck1Id/:deck2Id controllers.Application.deckDistance(deck1Id: Long, deck2Id:Long)
# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
